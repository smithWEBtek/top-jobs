<h3>Jobs Form</h3>

<%= form_for @job do |f| %>

    <% if @job.errors.any? %>
  <div id="error_explanation">
  <h4>There were some errors:</h4>

  <ul>
  <% @job.errors.full_messages.each do |message| %>
    <li><%= message %> </li>
    <% end %>
    </ul>
    </div>
    <% end %>

    <%= f.label :Title %><br>
    <%= f.text_field :title %><br>

    <%= f.label :Location %><br>
    <%= f.text_field :location %><br>

    <%= f.label :Category %><br>
    <%= f.text_field :category %><br>

    <%= f.label "Company Name" %><br>
    <%= f.text_field :company_name %><br>

    <%= f.label :Salary %><br> 
    <%= f.text_field :salary %><br>

    <%= f.label :Description %><br>
    <%= f.text_area :description %><br>

    <%=  f.hidden_field :company_id, :value => @user.id unless @job.company_id %>

    <%= f.submit %>
    <% end %>
